<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">



    <ImageView
        android:id="@+id/profile_Image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="14dp"
        android:src="@drawable/prfileimage" />


    <androidx.cardview.widget.CardView
        android:id="@+id/acceptCard"
        android:layout_width="155dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginRight="90dp"
        android:layout_marginTop="60dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp">

        <ImageView
            android:id="@+id/acceptImage"
            android:layout_width="132dp"
            android:layout_height="106dp"
            android:layout_margin="15dp"
            android:padding="20dp"
            app:srcCompat="@drawable/donate" />

        <TextView
            android:id="@+id/donateText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="120dp"
            android:text="Donar's List"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/requestList_card"
        android:layout_width="155dp"
        android:layout_height="150dp"
        android:layout_marginLeft="90dp"
        android:layout_gravity="center"
        android:layout_marginTop="-150dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp">

        <ImageView
            android:layout_width="132dp"
            android:layout_height="106dp"
            android:layout_margin="15dp"
            android:padding="20dp"
            android:src="@drawable/requestform">


        </ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="120dp"
            android:text="@string/requestblood"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/bloodInfo_card"
        android:layout_width="155dp"
        android:layout_height="150dp"
        android:layout_marginRight="90dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp">

        <ImageView
            android:layout_width="132dp"
            android:layout_height="106dp"
            android:layout_margin="15dp"
            android:padding="20dp"
            android:src="@drawable/bloodinfo"/>

        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textSize="18sp"
            android:layout_marginTop="120dp"
            android:textColor="@color/black"
            android:text="Blood Info"
            android:textStyle="bold"
            android:layout_height="match_parent"/>

    </androidx.cardview.widget.CardView>
</LinearLayout>


